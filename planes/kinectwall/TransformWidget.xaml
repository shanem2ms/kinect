<UserControl x:Class="kinectwall.TransformWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:kinectwall"
             mc:Ignorable="d"              
             d:DesignHeight="400.146" d:DesignWidth="729.155">
    <UserControl.Resources>
        <local:StringFormatConverter x:Key="StringFormatConverter" />
    </UserControl.Resources>
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Label Content="Scale" />
            <Label Content="X" Margin="5"/>
            <TextBox Text="{Binding Path=SclX}" />
            <Label Content="Y" Margin="5"/>
            <TextBox Text="{Binding Path=SclY}" />
            <Label Content="Z" Margin="5"/>
            <TextBox Text="{Binding Path=SclZ}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Label Content="Offset" />
            <Label Content="X" Margin="5"/>
            <TextBox Text="{Binding Path=OffX}" />
            <Label Content="Y" Margin="5"/>
            <TextBox Text="{Binding Path=OffY}" />
            <Label Content="Z" Margin="5"/>
            <TextBox Text="{Binding Path=OffZ}" />
        </StackPanel>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Content="Rotation X" />
            <Slider Grid.Column="1" Value="{Binding RotX}" MinWidth="100" Minimum="-180" Maximum="180" SmallChange="1" LargeChange="10" 
                    IsSnapToTickEnabled="True"/>
            <Label Grid.Column="2" Content="{Binding RotX, Converter={StaticResource StringFormatConverter}}" />
            <Label Grid.Row="1" Content="Rotation Y" />
            <Slider Grid.Row="1" Grid.Column="1" Value="{Binding RotY}" MinWidth="100" Minimum="-180" Maximum="180" 
                    IsSnapToTickEnabled="True"/>
            <Label Grid.Row="1" Grid.Column="2" Content="{Binding RotY, Converter={StaticResource StringFormatConverter}}" />
            <Label Grid.Row="2" Content="Rotation Z" />
            <Slider Grid.Row="2" Grid.Column="1" Value="{Binding RotZ}" MinWidth="100" Minimum="-180" Maximum="180"
                    IsSnapToTickEnabled="True"/>
            <Label Grid.Row="2" Grid.Column="2" Content="{Binding RotZ, Converter={StaticResource StringFormatConverter}}" />
        </Grid>
    </StackPanel>
</UserControl>
