<Window x:Class="kinectwall.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:opentk="clr-namespace:OpenTK;assembly=OpenTK.GLControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" Loaded="Window_Loaded"
        Closing="MainWindow_Closing">
    <Grid>
        <WindowsFormsHost x:Name="HostControl" Margin="0,20,0,0" >
            <opentk:GLControl x:Name="glControl" Resize="glControl_Resize" 
                              VSync="True"/>
        </WindowsFormsHost>
    </Grid>
</Window>
